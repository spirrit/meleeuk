{% endblock %}
{% block after %}
<section class="after">
  {# <h2>Recent posts:</h2> #}
  <div class="recent">
    {% set atPost = 0 %}
    {% for blog in collections.blog %}
      {% if atPost < 2 %}
        <div class="snippetbox">
          <a href="{{blog.url}}" class="snippet" style="background-image: url({{blog.data.thumbnail}});">
            <div class="recentpost">
              <h2>{{blog.data.title | truncate(25) }}</h2>
              {{blog.data.content | safe | truncate(150) }}
            </div>
          </a>
        </div>
      {% endif%}
      {% set atPost = atPost + 1 %}
    {% endfor %}
    <div class="snippetbox snippetboxend">
      <a href="/blog/" class="snippet snippetend">
        <p>{{collections.blog.length-2}} more posts in our archive...</p>
      </a>
    </div>
  </div>
</section>
{% endblock %}


